{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Typescript debug",
      "program": "${workspaceFolder}\\src\\app.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "restart": true,
      // "runtimeExecutable": "nodemon", //! (--global nodemon) 
      "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js", //! (--save-dev nodemon)
      "console": "integratedTerminal",
    }
  ]
}